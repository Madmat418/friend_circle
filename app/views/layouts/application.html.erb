<!DOCTYPE html>
<html>
<head>
  <title>FriendCircle</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>


<%if logged_in?%>
<h4 align="right">
  <%=current_user.email%>
  <%= button_to "Log Out", session_url, :method => :delete %>
</h4>
<%end%>

<body>

<%= yield %>

</body>
</html>
